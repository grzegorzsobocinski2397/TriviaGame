<Page x:Class="TriviaGame.Pages.ResultsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TriviaGame"
      mc:Ignorable="d"  Height="600" Width="480"
      Title="HighscoresPage">

    <Grid>
        <TextBlock Text="{Binding MainText}" Foreground="Red" HorizontalAlignment="Left" Margin="174,209,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="66" Width="104" />
        <Button Command="{Binding ReturnCommand}" Content="Return" HorizontalAlignment="Left" Margin="24,66,0,0" VerticalAlignment="Top" Width="75" />
        <ListView ItemsSource="{Binding Answers}" HorizontalAlignment="Left" Height="100" Margin="36,229,0,0" VerticalAlignment="Top" Width="385">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Question.Content}" Foreground="{Binding IsCorrect, Converter={local:BooleanToForegroundValueConverter}}" ></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>