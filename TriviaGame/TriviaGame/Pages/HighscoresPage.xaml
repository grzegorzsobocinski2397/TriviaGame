<Page x:Class="TriviaGame.Pages.HighscoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"  Height="600" Width="780"
      Title="HighscoresPage">

    <Grid Background="{StaticResource ApplicationBackgroundBrush}">
        <TextBlock Text="Highscores" Style="{StaticResource HeaderTextBlock}" Margin="40" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button
            Command="{Binding ReturnCommand}" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
             Margin="50 65 "
            Background="#664346"
            Foreground="#664346"
            BorderThickness="0">
            <Canvas Width="24" Height="24">
                <Path Fill="Black" Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" />
            </Canvas>
        </Button>
        <ListView ItemsSource="{Binding Users}" HorizontalAlignment="Center" Height="380" Margin="180" VerticalAlignment="Top" Width="680">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="Red" Text="{Binding Score}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
