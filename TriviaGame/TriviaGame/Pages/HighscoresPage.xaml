<Page x:Class="TriviaGame.Pages.HighscoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d"  Height="600" Width="480"
      Title="HighscoresPage">

    <Grid>
        <Button Command="{Binding ReturnCommand}" Content="Back" HorizontalAlignment="Left" Margin="26,38,0,0" VerticalAlignment="Top" Width="75"/>
        <ListView ItemsSource="{Binding Users}" HorizontalAlignment="Left" Height="100" Margin="36,229,0,0" VerticalAlignment="Top" Width="385">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Foreground="Red" Text="{Binding Score}"></TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
